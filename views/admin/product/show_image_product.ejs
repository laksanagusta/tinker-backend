<div class="tab-pane fade show active" id="show-image" role="tabpanel" aria-labelledby="home-tab">
    <!-- DataTales Example -->
    <div class="row">
        <% for(let i=0; i < product.imageId.length; i++) { %>
        <div class="col-md-4">
            <div class="card shadow mb-4 mt-2">
                <div class="card-body">
                    <div class="table-responsive">
                        <img src="<%= process.env.BASE_URL %>/<%= product.imageId[i].imageUrl %>" alt="image" style="width: 100%; display: block;"> 
                    </div>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <a href="/admin/product" class="btn btn-warning my-5">Go Back</a>
</div>